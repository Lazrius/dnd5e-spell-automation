{
	"root": true,
	"env": {
		"node": true,
		"browser": true
	},
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module",
		"ecmaFeatures": {
			"globalReturn": true
		}
	},
	"rules": {
		"semi": "error",
		"indent": ["error", "tab", { "MemberExpression": 1 }]
	},
	"globals": {
		"args": "writable",
		"warpgate": "readonly",
		"league-of-foundry-developers": true
	}
}
